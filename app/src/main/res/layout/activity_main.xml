<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/BTNhelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="276dp"
        android:background="#ff0000"
        android:gravity="center"
        android:text="HELP"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BTNmedical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Medical"
        app:layout_constraintStart_toStartOf="@+id/BTNgeneral"
        app:layout_constraintTop_toBottomOf="@+id/BTNgeneral" />

    <Button
        android:id="@+id/BTNdisaster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="145dp"
        android:text="Natural Disaster"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/BTNfire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Fire"
        app:layout_constraintBottom_toTopOf="@+id/BTNdisaster"
        app:layout_constraintStart_toStartOf="@+id/BTNdisaster" />

    <Button
        android:id="@+id/BTNgeneral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="21dp"
        android:text="General Emergency"
        app:layout_constraintBaseline_toBaselineOf="@+id/BTNfire"
        app:layout_constraintEnd_toStartOf="@+id/BTNfire" />

</androidx.constraintlayout.widget.ConstraintLayout>